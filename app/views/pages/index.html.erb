<div ng-controller="PostCtrl">
  <h1>{{heading}}</h1>

  <form ng-submit="create()">
    <div class="row">
      <label for="title">Title</label>
      <input type="text" name="post[title]" id="title" ng-model="newPost.title" />
    </div>
    <div class="row">
      <p>{{newPost.title|titleize}}</p>
    </div>
    <div class="row">
      <label for="body">Body</label>
      <textarea type="text" name="post[body]" id="body" ng-model="newPost.body"></textarea>
    </div>
    <div class="row">
      <input type="submit" class="button"/>
    </div>
  </form>

  <ul>
    <li ng-repeat="post in posts">
      <h2>{{post.title|titleize}}</h2>
      <p>{{post.body}}</p>
    </li>
  </ul>
</div>